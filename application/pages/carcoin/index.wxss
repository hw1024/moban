/**index.wxss**/
.carcoin-top {
  position:fixed;
  width:100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 50rpx 0;
	background: #fff;	
  z-index:2;
}
.carcoin-top__tit{
  font-size: 28rpx;
  line-height: 40rpx;
}
.carcoin-top__coin {
	font-size: 48rpx;
	margin-top: 14rpx;
  line-height: 68rpx;
}
.carcoin-top__coin_txt{
  font-size:28rpx;
  margin-left:8rpx;
}
.code-btn {
	width: 360rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 30rpx;
	background: #F5D421;
	border-radius: 100rpx;
  margin-top:36rpx;
}
.carcoin-box {
	background: #fff;
	font-size: 24rpx;
	color: #666;
  position:absolute;
  top:344rpx;
  width:100%;
  padding-top:60rpx;
}
.carcoin-year{
  position:relative;
  top:0;
  padding-left:24rpx;
  line-height: 60rpx;
  width:100%;
  border-bottom:2rpx solid #ddd;
  background-color:#f2f2f2;
}
.carcoin-list {
	display: flex;
	align-items: center;
	text-align: left;
	height: 94rpx;
	margin: 0 24rpx;
	border-bottom: 1rpx solid #D8D8D8;
}
.carcoin-list__item {
	padding-right: 10rpx;
}
.carcoin-list__item_one {
	width: 105rpx;
	padding-right: 41rpx; 
	line-height: 1.4;
}
.carcoin-list__item_two {
	width: 50rpx;
}
.carcoin-list__item_three {
	width: 187rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.carcoin-list__item_four {
	width: 141rpx;
}
.carcoin-list__item_five {
	width: 147rpx;
}
.carcoin-list__item_six {
	width: 120rpx;
}
.carcoin-list__item_img {
	width: 44rpx;
	height: 44rpx;
	vertical-align: middle;
}

