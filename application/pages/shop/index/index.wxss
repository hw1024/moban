/**index.wxss**/
.store-top {
  background-color: #fff;
}
.store-title {
  display: flex;
  align-items: center;
  font-size:34rpx;
  padding: 18rpx 24rpx;
}
.store-top_image {
  width: 94rpx;
  height: 94rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}

.swiper-container {
  position: relative;
}
.swiper_box {
	height:314rpx;
	overflow: hidden;
  background-color:#fff;
}
.slide-image {
	width: 100%;
	height: 100%;
}
.swiper-pager {
  position: absolute;
  right: -7rpx;
  bottom: -5rpx;
  width: 118rpx;
  height: 68rpx;
  line-height: 68rpx;
  -webkit-transform: scale(.5);
  transform: scale(.5);
  background: rgba(0,0,0,0.50);
  border: 1rpx solid rgba(0,0,0,0.06);
  border-radius: 200rpx;
  text-align: center;
  color: #fff;
  font-size: 44rpx;
}
.store-info{
  color: #666;
  font-size: 26rpx;
  padding:28rpx 24rpx;
}
.store-info__txt{
  font-size: 24rpx;
  margin-bottom: 12rpx;
  line-height: 33rpx;
}
.store-info__address{
  line-height: 36rpx;
}
.store-lower {
  margin-top: 10rpx;
  padding-bottom: 75rpx;  
  background-color: #fff;
}
.store-car__list {
  padding: 30rpx 86rpx 0;
}
.store-car__item{
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
  margin-right: 44rpx;
  margin-bottom: 24rpx;
}
.store-car__item:nth-child(5n){
  margin-right: 0;
}
.store-car__item_img {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.store-car__all{
  display: flex;
  justify-content: center;
  margin-top: 22rpx;
  text-align: center;
}
.cars-all__num{
  font-size:28rpx;
  line-height: 40rpx;
}
.cars-all__btn{
  color:#999;
  font-size:24rpx;
  margin-left:14rpx;
  line-height: 40rpx;
}
.store-btn {
  width: 100%;
  height: 110rpx;
  position: fixed;
  bottom: 0;
  background-color: #f5d421;
  text-align: center;
  font-size: 36rpx;
  line-height: 110rpx;
  z-index: 1;
}
.store-btn__active {
  background-color: #DDDDDD;
  color: #666;
}