/**index.wxss**/
.book-title {
	font-size: 30rpx;
	padding: 26rpx 24rpx;
	background: #fff;
}
.book-info {
	background: #fff;
	padding: 0 24rpx;
	font-size: 28rpx;
	color: #666;
	margin-top: 10rpx;
}
.book-info__item_text {
	font-size: 24rpx;
	line-height: 1.5;
	margin-top: 24rpx;
	margin-bottom: 20rpx;
}
.book-info__item_image {
	width: 240rpx;
	height: 200rpx;
	vertical-align: middle;
	margin-right: 60rpx;
}
.book-lower {
	background: #fff;
	font-size: 28rpx;
	color: #666;
	margin-top: 10rpx;
	padding-bottom: 360rpx;
}
.book-lower__title {
	display: flex;
	align-items: center;
	padding: 26rpx 24rpx;
	border-bottom: 1rpx solid #F2F2F2;
}
.book-lower__title_icon {
	width: 27rpx;
	height: 27rpx;
	margin-right: 16rpx;
	vertical-align: middle;
}
.book-lower__discount {
	padding: 26rpx 24rpx 30rpx;
	border-bottom: 1rpx solid #DDDDDD;
}
.book-lower__discount .wx-switch-input {
	width: 84rpx;
	height: 44rpx;
	margin-right: 0;
}
.book-lower__discount .wx-switch-input::before {
	width: 80rpx;
	height: 40rpx;
}
.book-lower__discount .wx-switch-input::after {
	width: 42rpx;
	height: 40rpx;
}

.book-lower__discount_item {
	display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    align-items: center;
	justify-content: space-between;
}
.book-lower__discount_select {
	margin-bottom: 20rpx;
}
.book-lower__explain {
	font-size: 24rpx;
	padding: 24rpx;
}
.book-lower__explain_item {
	margin-bottom: 16rpx;
}
.book-form {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: #FFFFFF;
	align-items: center;
	font-size: 30rpx;
	height: 100rpx;
	line-height: 100rpx;
	box-shadow: 0 -1rpx 2rpx 0 rgba(0,0,0,0.11);
}
.book-form__money {
	-webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    margin-left: 24rpx;  
}
.book-form__btn {
	width: 265rpx;
	text-align: center;
	font-size: 36rpx;
	background: #F5D421;
}