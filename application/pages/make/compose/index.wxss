/**index.wxss**/
.compose-front, .compose-after {
  padding: 20rpx 0 40rpx;
  background: #fff;
}
.compose-after {
  text-align: center;
}
.compose-box {
	width: 556rpx;
	height: 706rpx;
	margin: 0 auto 30rpx;
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
  box-shadow: 1rpx 1rpx 8rpx 0 rgba(128,128,128,0.33);
}
.compose-box__info {
  position: absolute;
  top: 283rpx;
  left: 0;
  right: 0;
  font-size: 22rpx;
  color: #000;
}
.compose-box__info_item {
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding: 0 24rpx;
}
.compose-box__info_item-lower {
  margin-top: 18rpx;
}
.compose-box__info_item-name {
  font-size: 34rpx;
}
.compose-box__info_num {
  width: 24rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  font-size: 26rpx;
  margin-left: 4rpx;
  color: #000;
  background: #F5D421;
  border-radius: 5rpx; 
}
.compose-box__info_image {
  width: 100%;
  height: 232rpx;
}
.compose-box__line{
  height:4rpx;
  width:438rpx;
  background-color:#d8d8d8;
  position:absolute;
  bottom: 84rpx;
  left: 59rpx;
}
.compose-box__line::before,.compose-box__line::after{
  content:"";
  display:inline-block;
  width:18rpx;
  height:18rpx;
  background-color:#d8d8d8;
  border-radius:18rpx;
  position:absolute;
  top:-7rpx;
}
.compose-box__line::before{
  left:-18rpx;
}
.compose-box__line::after{
  right:-18rpx;
}
.compose-box__line_dark{
  position:relative;
  background-color:#000000;
  height:4rpx;
  width:2rpx;
  left:0;
  top:0;
  z-index:1;
}
.compose-box__line_dark::before,.compose-box__line_dark::after{
  content:"";
  display:inline-block;
  width:18rpx;
  height:18rpx;
  background-color:#000000;
  border-radius:18rpx;
  position:absolute;
  top:-7rpx;
  z-index:1;
}
.compose-box__line_dark::before{
  left:-18rpx;
}
.compose-box__line_dark::after{
  right:-18rpx;
}
.compose-box__line_dark-car{
  width:60rpx;
  height:26rpx;
  position:absolute;
  right:-39rpx;
  top:-36rpx;
}

.compose-box__lower {
  position:absolute;
  bottom: 34rpx;
  left: 0;
  right: 0;
  padding: 0 41rpx;
  font-size: 20rpx;
  color: #000;
  display: flex;
  justify-content: space-between;
}

.compose-select__title {
  padding: 10rpx 24rpx;
  font-size: 28rpx;
}
.compose-select__list {
  margin: 16rpx 24rpx 44rpx;
}
.scroll-view__box {
  height: 200rpx;
  white-space: nowrap;
  display: flex;
}
.scroll-view__item {
  width: 158rpx;
  height:200rpx;
  background-repeat: no-repeat;
  background-size: cover;
  display: inline-block;
  margin-left: 24rpx;
  box-shadow: 0 1rpx 4rpx 0 rgba(128,128,128,0.33) inset;
}
.scroll-view__item:first-child {
  margin-left: 0;
}
.compose-front .compose-btn {
  width: 670rpx;
  height: 94rpx;
  line-height: 94rpx;
  padding: 0;
  margin: 0 auto;
  border: none;
  font-size: 36rpx;
  text-align: center;
  background: #F5D421;
  border-radius: 100rpx;
}
.compose-front .compose-btn:after {
  display: none;
}

.compose-canvas {
  width: 300px; 
  height: 485px; 
  margin: 100rpx auto;
}
.compose-after__image {
  width: 568rpx;
  height: 1006rpx;
  box-shadow: 1rpx 1rpx 8rpx 0 rgba(128,128,128,0.33);
  margin: 0 auto;
}
.compose-after__text {
  font-size: 24rpx;
  width: 568rpx;
  text-align: left;
  margin: 16rpx auto 0;
  color: #666;
}
.compose-after__btn {
  margin: 18rpx 24rpx 0;
  font-size: 36rpx;
  display:flex;
  justify-content: space-between;
}
.compose-after__btn .compose-after__btn_keep {
  margin: 0;
  padding: 0;
  width: 328rpx;
  height: 94rpx;
  line-height: 94rpx;
  border: none;
  text-align: center;
  background: #F5D421;
  border-radius: 100rpx;
}
.compose-after__btn .compose-after__btn_keep:after {
  display: none;
}
.compose-after__btn .compose-after__btn_share {
  margin: 0;
  padding: 0;
  width: 324rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #fff;
  color: #222;
  border: 2rpx solid #F5D421;
  border-radius: 100rpx;
}
.compose-after__btn .compose-after__btn_share:after {
  display: none;
}