.user-info {
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
	font-size: 28rpx;
	padding: 48rpx 0 26rpx;
	background: #F5D421;
}
.user-info .user-info__avatar {
	width: 110rpx;
	height: 110rpx;
	border-radius: 50%;
}
.user-info .user-info__nickname {
	margin-top: 14rpx;
}
.user-info .user-info__today {
	display: flex;
	flex-direction: column;
	align-items: center;
	position: absolute;
	bottom: 26rpx;
	right: 0;
	padding: 10rpx 26rpx 8rpx;
	background: #fff;
	border-bottom-left-radius: 50rpx;
	border-top-left-radius: 50rpx; 
}
.user-info__today_txt {
	margin-bottom: 8rpx;
}
.user-info .user-info__news{
	position: absolute;
	top: 20rpx;
	left: 24rpx;
}
.user-info .user-info__news .user-info__news_img{
	width: 38rpx;
	height: 38rpx;
}
.user-info .user-info__news .user-info__news_badge {
	position: absolute;
    top: -1rpx;
    right: -4.5rpx;
	width: 14rpx;
	height: 14rpx;
	border-radius: 20rpx;
	background: #FF6531;
}
.user-record {
	padding: 20rpx 0;
	background: #fff;
}
.weui-flex__item:first-child {
	border-right: 1rpx solid #DDDDDD;
}
.user-voucher {
	margin-top: 10rpx;
	background: #fff;
}
.user-voucher .weui-grid {
	padding: 24rpx 0;
	line-height: 1.2;
}
.user-voucher .weui-grid__title {
	font-size: 24rpx;
	color: #666;
}
.user-voucher__box {
	border-top: 1rpx solid #DDDDDD;
}
.user-voucher__box .weui-cell {
	padding: 0 24rpx;
}
.user-voucher__series {
	font-size: 30rpx;
	margin-bottom: 20rpx;
}
.user-voucher__box_img {
	width: 240rpx;
	height: 200rpx;
	vertical-align: middle;
	margin-right: 20rpx;
}
.user-voucher__shop {
	font-size: 26rpx;
	color: #666;
}
.user-voucher__shop_icon {
	width: 26rpx;
	height: 26rpx;
	margin-right: 6rpx;
	vertical-align: bottom;
}

.user-voucher .weui-grid:last-child {
	border-right: none;
}
.user-achievement {
	margin-top: 10rpx;
	background: #fff;
}
.user-achievement .weui-grid:last-child {
	border-right: none;
}
.user-achievement .weui-grid__title_num {
	font-size: 50rpx; 
	color: #222;
}
.user-footer {
	margin-top: 56rpx;
	font-size: 22rpx;
	text-align: center;
	color: #999;
}
.user-footer__icon {
	width: 26rpx;
	height: 26rpx;
	margin-right: 8rpx;
	vertical-align: middle;
}
